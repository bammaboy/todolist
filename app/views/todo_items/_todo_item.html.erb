<div class="row clearfix">
	<% if todo_item.completed? %>
	 <div class="complete">
	 	<%= link_to "Отметить сделаным", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
	</div>
	<div class="todo_item">
		<p style="opacity: 0.4;"><strike><%= todo_item.content %></strike></p>
	</div>
	<div class="trash">
		<%= link_to "Удалить", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Вы уверены?" } %>
	</div>
<% else %>
	<div class="complete">
	 	<%= link_to "Отметить сделаным", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
	</div>
	<div class="todo_item">
		<p><%= todo_item.content %></p>
	</div>
	<div class="trash">
		<%= link_to "Удалить", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "Вы уверены?" } %>
	</div>
<% end %>
</div>
